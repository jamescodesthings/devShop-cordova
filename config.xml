<?xml version='1.0' encoding='utf-8'?>
<widget id="com.packtpub.devShop" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>devShop</name>
    <description>
        The devShop app by https://github.com/secretGeek
    </description>
    <author href="https://github.com/secretGeek">
        secretGeek
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="BackgroundColor" value="#222222"/>
    <preference name="StatusBarOverlaysWebView" value="false"/>
    <preference name="StatusBarStyle" value="lightcontent"/>
    <preference name="AutoHideSplashScreen" value="true"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="StatusBarBackgroundColor" value="#222222"/>
    <icon src="cordova/archive/icon-android-chrome-512x512.png"/>
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="SplashMaintainAspectRatio" value="true"/>
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="cordova/res/icon/android/ldpi.png" density="ldpi" />
        <icon src="cordova/res/icon/android/mdpi.png" density="mdpi" />
        <icon src="cordova/res/icon/android/hdpi.png" density="hdpi" />
        <icon src="cordova/res/icon/android/xhdpi.png" density="xhdpi" />
        <icon src="cordova/res/icon/android/xxhdpi.png" density="xxhdpi" />
        <icon src="cordova/res/icon/android/xxxhdpi.png" density="xxxhdpi" />
        <splash src="cordova/res/screen/android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="cordova/res/screen/android/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="cordova/res/screen/android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="cordova/res/screen/android/splash-port-xhdpi.png" density="port-xhdpi"/>
        <splash src="cordova/res/screen/android/splash-port-xxhdpi.png" density="port-xxhdpi"/>
        <splash src="cordova/res/screen/android/splash-port-xxxhdpi.png" density="port-xxxhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="cordova/res/icon/ios/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="cordova/res/icon/ios/icon-60.png" width="60" height="60" />
        <icon src="cordova/res/icon/ios/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="cordova/res/icon/ios/icon-76.png" width="76" height="76" />
        <icon src="cordova/res/icon/ios/icon-76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="cordova/res/icon/ios/icon-small-40.png" width="40" height="40" />
        <icon src="cordova/res/icon/ios/icon-small-40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="cordova/res/icon/ios/icon.png" width="57" height="57" />
        <icon src="cordova/res/icon/ios/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="cordova/res/icon/ios/icon-72.png" width="72" height="72" />
        <icon src="cordova/res/icon/ios/icon-72@2x.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="cordova/res/icon/ios/icon-167.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="cordova/res/icon/ios/icon-small.png" width="29" height="29" />
        <icon src="cordova/res/icon/ios/icon-small@2x.png" width="58" height="58" />
        <icon src="cordova/res/icon/ios/icon-small@3x.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="cordova/res/icon/ios/icon-small-50.png" width="50" height="50" />
        <icon src="cordova/res/icon/ios/icon-small-50@2x.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="cordova/res/icon/ios/icon-83.5@2x.png" width="167" height="167" />
        <splash src="cordova/res/screen/ios/Default@2x~iphone~anyany.png" />
        <splash src="cordova/res/screen/ios/Default@2x~iphone~comany.png" />
        <splash src="cordova/res/screen/ios/Default@3x~iphone~anyany.png" />
        <splash src="cordova/res/screen/ios/Default@3x~iphone~comany.png" />
        <splash src="cordova/res/screen/ios/Default@2x~ipad~anyany.png" />
        <splash src="cordova/res/screen/ios/Default@2x~ipad~comany.png" />
        <preference name="deployment-target" value="9.0"/>
        <preference name="HideKeyboardFormAccessoryBar" value="false"/>
        <preference name="MediaPlaybackAllowsAirPlay" value="true"/>
        <preference name="BackupWebStorage" value="cloud"/>
        <preference name="ScrollEnabled" value="true"/>
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine"/>
        <config-file parent="UIStatusBarHidden" platform="ios" target="*-Info.plist">
            <true/>
        </config-file>
        <config-file parent="UIViewControllerBasedStatusBarAppearance" platform="ios" target="*-Info.plist">
            <false/>
        </config-file>
        <feature name="StatusBar">
            <param name="ios-package" onload="true" value="CDVStatusBar"/>
        </feature>
        <feature name="CDVWKWebViewEngine">
            <param name="ios-package" value="CDVWKWebViewEngine"/>
        </feature>
    </platform>
</widget>
